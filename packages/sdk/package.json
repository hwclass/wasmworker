{
  "name": "@wasmworker/sdk",
  "version": "0.1.2",
  "description": "Lightweight SDK for running WebAssembly modules inside WebWorkers",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "clean": "rm -rf dist",
    "sync-files": "cp ../../README.md README.md && cp ../../LICENSE LICENSE",
    "prepublishOnly": "pnpm run sync-files && pnpm run clean && pnpm run build && pnpm run test"
  },
  "keywords": [
    "wasm",
    "webassembly",
    "worker",
    "webworker",
    "typescript",
    "browser",
    "parallel",
    "performance",
    "rust"
  ],
  "author": "Baris Guler",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/barisguler/wasmworker.git",
    "directory": "packages/sdk"
  },
  "homepage": "https://github.com/barisguler/wasmworker#readme",
  "bugs": {
    "url": "https://github.com/barisguler/wasmworker/issues"
  },
  "devDependencies": {
    "@types/node": "^20.11.0",
    "jsdom": "^24.0.0",
    "typescript": "^5.3.3",
    "vitest": "^1.2.0"
  }
}
